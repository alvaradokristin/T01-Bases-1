@page
@model GestorAplicaciones.Pages.Add.AddAppModel
@{
}

<br />
<h2>Crear Aplicacion</h2>
<br />

@if (Model.errorMessage.Length > 0) {
    <div class="alert alert-warning alert-desmissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

<form method="post">
    <div class="mb-3">
        <label for="app-code" class="form-label">Codigo de Aplicacion:</label>
        <input type="text" class="form-control" id="app-code" name="app-code" value="@Model.appInfo.codigo">
    </div>

    <div class="mb-3">
        <label for="app-patent-num" class="form-label">Numero de Patente:</label>
        <input type="text" class="form-control" id="app-patent-num" name="app-patent-num" value="@Model.appInfo.numPatente">
    </div>

    <div class="mb-3">
        <label for="app-name" class="form-label">Nombre:</label>
        <input type="text" class="form-control" id="app-name" name="app-name" value="@Model.appInfo.nombre">
    </div>

    <div class="mb-3">
        <label for="app-desc" class="form-label">Descripcion:</label>
        <textarea class="form-control" id="app-desc" rows="3" name="app-desc" value="@Model.appInfo.descripcion"></textarea>
    </div>

    <div class="mb-3">
        <label for="app-type" class="form-label">Tipo de Aplicacion:</label>
        <select class="form-select" id="app-type" name="app-type" value="@Model.appInfo.tipo">
            <option selected> </option>
            <option value="negocio">Negocio</option>
            <option value="utilitaria">Utilitaria</option>
            <option value="otra">Otra</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="app-prod-date" class="form-label">Fecha de Produccion:</label>
        <input type="text" class="form-control" id="app-prod-date" name="app-prod-date" value="@Model.appInfo.fechaProduccion" placeholder="AAAA-MM-DD">
    </div>

    <div class="mb-3">
        <label for="app-linc-exp" class="form-label">Fecha de Expiracion de Licencia</label>
        <input type="text" class="form-control" id="app-linc-exp" name="app-linc-exp" value="@Model.appInfo.fechaExpiraLicencia" placeholder="AAAA-MM-DD">
    </div>

    <div class="mb-3">
        <label for="app-dept" class="form-label">Codigo de Departamento a Cargo:</label>
        <input type="text" class="form-control" id="app-dept" name="app-dept" value="@Model.appInfo.codigoDepartamento">
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="alert alert-success alert-desmissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        </div>
    }

    <button type="submit" class="btn btn-primary">Agregar</button>
</form>
