@page
@model GestorAplicaciones.Pages.Show.ShowErrorsModel
@{
}

<br />
<h2>Errores</h2>
<br />

@*TABLE TO SHOW THE INFORMATION FROM THE SQL TABLE*@
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descripcion</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Impacto</th>
                <th>Serie del Servidor</th>
                <th>Codigo de Aplicacion</th>
                <th>ID de Proyecto</th>
            </tr>
        </thead>

        <tbody>
            @*CREATE THE TABLES ROWS AND ASSIGN THEM THE INFORMATION FROM THE DB*@
            @foreach (var item in Model.listErrors)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.descripcion</td>
                    <td>@item.fecha</td>
                    <td>@item.hora</td>
                    <td>@item.impacto</td>
                    <td>@item.serieServidor</td>
                    <td>@item.codigoAplicacion</td>
                    <td>@item.idProyecto</td>
                </tr>
            }
        </tbody>
    </table>
</div>